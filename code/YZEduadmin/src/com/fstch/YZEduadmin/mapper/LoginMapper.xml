<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.fstch.YZEduadmin.mapper.LoginMapper">
 	<select id="findByName" resultType="com.fstch.YZEduadmin.models.Login">
 		select admin_name,admin_password from admin where admin_name = #{admin_name}
 	</select>
 	
 	<update id="modify" parameterType="com.fstch.YZEduadmin.models.Login">
 		update `admin` set admin_password=#{admin_password} where admin_name=#{admin_name}
 	</update>
 </mapper>