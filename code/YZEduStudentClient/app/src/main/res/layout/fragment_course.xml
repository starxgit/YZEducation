<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@mipmap/toubu"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/course"
            android:textColor="@color/Write"
            android:textSize="22sp" />
    </FrameLayout>

    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey0"
        android:backgroundTint="@color/grey2"
        android:clickable="true"
        android:editable="false"
        android:gravity="center"
        android:hint="@string/input_search_content"
        android:textSize="12sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_live"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/tv_live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/is_living"
                    android:textColor="@color/text_black3"
                    android:textSize="18sp" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/line_d6" />

                <com.fstech.yzedusc.view.MyListView
                    android:id="@+id/lv_live"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/Write" />

                <RelativeLayout
                    android:id="@+id/re_more_live"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="华文黑体"
                        android:text="@string/live_room"
                        android:textColor="@color/text_black6" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/textView2"
                        android:alpha="0.2"
                        android:src="@mipmap/cd1" />
                </RelativeLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/Write"
                app:cardCornerRadius="@dimen/dimen_9dp">

                <LinearLayout
                    android:id="@+id/ll_new"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:paddingTop="15dp">

                    <TextView
                        android:id="@+id/tv_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/course_new"
                        android:textColor="@color/text_black3"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="20dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@color/line_d6" />

                    <com.fstech.yzedusc.view.MyGridView
                        android:id="@+id/gv_new"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@color/Write"
                        android:listSelector="@android:color/transparent"
                        android:numColumns="2" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/line_d6" />

                    <RelativeLayout
                        android:id="@+id/re_more_new"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="华文黑体"
                            android:text="@string/showmore"
                            android:textColor="@color/text_black6" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/textView3"
                            android:alpha="0.2"
                            android:src="@mipmap/cd1" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/line_d6" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/Write"
                app:cardCornerRadius="@dimen/dimen_9dp">

                <LinearLayout
                    android:id="@+id/ll_top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:paddingTop="15dp">

                    <TextView
                        android:id="@+id/tv_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/course_top"
                        android:textColor="@color/text_black3"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="20dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@color/line_d6" />

                    <com.fstech.yzedusc.view.MyGridView
                        android:id="@+id/gv_top"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@color/Write"
                        android:listSelector="@android:color/transparent"
                        android:numColumns="2" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/line_d6" />

                    <RelativeLayout
                        android:id="@+id/re_more_top"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="华文黑体"
                            android:text="@string/showmore"
                            android:textColor="@color/text_black6" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/textView4"
                            android:alpha="0.2"
                            android:src="@mipmap/cd1" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/line_d6" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>